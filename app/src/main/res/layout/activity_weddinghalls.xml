<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".weddinghalls">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:background="@drawable/whiteme"
                app:srcCompat="@drawable/whiteme" />


            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView

                        android:id="@+id/imageView3"
                        android:layout_width="167dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="#000"
                        app:srcCompat="@drawable/weddin" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Wedding Space"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:textStyle="italic"
                            android:layout_marginTop="15dp"
                            android:text="Showcase your wedding space with beautiful surroundings to comfort the feeling for real "/>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView

                        android:id="@+id/imageViewdec"
                        android:layout_width="167dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="#000"
                        app:srcCompat="@drawable/redwedding2" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Decoratations"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="italic"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:text="A virtual tour of your wedding reception area will spark the imagination and inspiration."/>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView

                        android:id="@+id/imageViewm"
                        android:layout_width="167dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="#000"
                        app:srcCompat="@drawable/photog" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Photography Areas"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:textStyle="italic"
                            android:layout_marginTop="15dp"
                            android:text="Portray those perfect photo opportunities and stunning with a walk-around of your terrace and gardens. "/>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView

                        android:id="@+id/imagerece"
                        android:layout_width="167dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="#000"
                        app:srcCompat="@drawable/rece" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Reception Halls"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:textStyle="italic"
                            android:layout_marginTop="15dp"
                            android:text="Stunning reception halls with affordable packages"/>

                        <Button
                            android:id="@+id/viewhalls"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="2dp"

                            android:background="@drawable/event_button"
                            android:paddingTop="5dp"


                            android:paddingBottom="5dp"

                            android:text="View More"
                            android:textColor="#000"
                            android:textSize="8dp" />


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>





</LinearLayout>